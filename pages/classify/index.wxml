<view class="risk-list">
	<!--搜索按钮-->
  <view class="page__bd">
		<view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
			<form class="weui-search-bar__form">
				<view class="weui-search-bar__box">
					<i class="weui-icon-search"></i>
					<input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
					<span class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput"></span>
				</view>
				<label class="weui-search-bar__label" bindtap="showInput">
					<i class="weui-icon-search"></i>
          <span class="weui-search-bar__text">搜索</span>
				</label>
			</form>
		</view>
	</view>

	<block wx:for="{{firstClassify}}" wx:for-index="id" wx:for-item="item">
		<view class='classify'>
				<view class='classify-sub' catchtap="showChilds" data-param="{{idx}}">
					<vies class='classify-name'>
						<image src="../../image/yilei.png" alt style="width: 20px; height: 20px; margin-right: 16px; display: block;"></image>
						<text class='classify-sub-name' catchtap='showChilds' data-param="{{id}}">{{item.areaName}}</text>
					</vies>
					
					<image class='classify-sub-img' data-param="{{id}}" src='{{currentFirstClassify == id ? "../../image/push.png" : "../../image/pull.png"}}' catchtap='showChilds'></image>
				</view>

				<view class="{{currentFirstClassify == id ? '' : 'tui-hide'}}">
						<view class='library-box'>
								<block wx:for="{{item.subs}}" wx:for-index="id" wx:for-item="second">
									<view class='classify-sub' catchtap="showChilds" data-param="{{idx}}">
										<vies class='classify-name'>
											<image src="../../image/erlei.png" alt style="width: 20px; height: 20px; margin-left:22rpx;margin-right: 12rpx; display: block;"></image>
											<text class='classify-sub-name' catchtap='showChilds' data-param="{{id}}">{{second.name}}</text>
										</vies>
										
										<image class='classify-sub-img' data-param="{{id}}" src='{{currentSecondClassify == id ? "../../image/push.png" : "../../image/pull.png"}}' catchtap='showChilds'></image>
									</view>				
								</block>
						</view>
				</view>
		</view>
	</block>

</view>
